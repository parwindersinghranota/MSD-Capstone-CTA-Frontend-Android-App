<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="Description"
        android:text=""/>

    <EditText
        android:id="@+id/editTextDate"
        android:layout_below="@+id/editTextDescription"
        android:layout_toLeftOf="@+id/imageButtonDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ride Date"
        android:focusable="false"
        android:layout_marginTop="10dp"
        android:text=""/>

    <ImageButton
        android:id="@+id/imageButtonDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_calendar"
        android:layout_below="@+id/editTextDescription"/>

    <EditText
        android:id="@+id/editTextTime"
        android:layout_below="@+id/editTextDate"
        android:layout_toLeftOf="@+id/imageButtonTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ride Time"
        android:focusable="false"
        android:layout_marginTop="10dp"
        android:text=""/>

    <ImageButton
        android:id="@+id/imageButtonTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextDate"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_time"
        />

    <CheckBox
        android:id="@+id/checkboxActive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTime"
        android:text="Active"
        android:layout_marginTop="10dp"/>


</RelativeLayout>